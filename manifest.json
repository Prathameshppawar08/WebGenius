{
  "manifest_version": 3,
  "name": "WebGenius",
  "version": "1.0",
  "description": "Scrape and chat with web pages using Perplexity AI",
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
